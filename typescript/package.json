{
  "dependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "jest": "*",
    "react-addons-test-utils": "*",
    "react-test-renderer": "^15.4.2",
    "typescript": ">=1.6.2"
  },
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*\\.(ts|tsx|js))|(\\.(test|spec)\\.(ts|tsx|js)*)$"
  }
}